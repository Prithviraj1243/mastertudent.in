// Firestore Security Rules for MasterStudent Notes Marketplace
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null; // Allow authenticated users to read other users (for marketplace)
    }
    
    // Notes collection - notes are public for reading, only owner can write
    match /notes/{noteId} {
      allow read: if true; // Public reading for marketplace
      allow write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId);
    }
    
    // Payments collection - only owner can read/write
    match /payments/{paymentId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Subscriptions collection - only owner can read/write
    match /subscriptions/{subscriptionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Downloads collection - only owner can read/write
    match /downloads/{downloadId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Ratings collection - authenticated users can read all, write their own
    match /ratings/{ratingId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Admin logs - read-only for authenticated users
    match /admin_logs/{logId} {
      allow read: if request.auth != null;
      allow write: if false; // Only server can write logs
    }
  }
}
